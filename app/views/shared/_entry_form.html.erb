<%= form_for(@entry) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>

  <%= f.label :body %>
  <%= f.text_area :body, class: 'form-control', cols: 40, rows: 30 %>

  <%= f.label :tags %>
  <%= f.text_field :spaced_tags, class: 'form-control' %>

  <%= f.submit ( f.object.new_record? ? "Create" : "Update"), class: "btn btn-primary" %>
<% end %>
