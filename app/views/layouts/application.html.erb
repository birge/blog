<!DOCTYPE html>
<html>
<head>
  <title>(Dexter Clark) <%= yield(:title) %></title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-2">
      <%= render "layouts/side_menu" %>
    </div>
    <div class="col-md-10">
      <% flash.each do |message_type, message| %>
        <div class="col-md-9 alert alert-<%= message_type %>">
          <% message.each do |arr_message| %>
            <p class="text-center"><%= arr_message %></p>
          <% end %>
        </div>
      <% end %>
      <%= yield %>
    </div>
  </div>
</div>

</body>
</html>